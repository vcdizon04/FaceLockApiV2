{
    "compilerOptions": {
      "jsx": "preserve",
      "allowJs": false,
      "noEmit": true,
      "strict": true,
      "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
      "lib": ["dom", "esnext"],
      "skipLibCheck": true,
    },

    "include": ["src"],
    "exclude": [
        "node_modules/",
        "build/",
        "scripts/",
        "acceptance-tests/",
        "webpack/",
        "jest/",
        "src/setupTests.ts",
        "public/",
        "config/"
      ]
}